<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logbg3"
   >
      
 <ScrollView
      android:fitsSystemWindows="true"  
     android:clipToPadding="true"  
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
  
     
     
<LinearLayout 
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ex_layout"
    >
    <!--顶部线性布局-->
     <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:orientation="vertical"
       android:gravity="center"
   
       >
         <!--顶部帧布局-->
         <FrameLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            >
         <Button 
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:background="@drawable/cirbg"
             />
         <TextView
             android:layout_width="200dp"
             android:layout_height="100dp"
             android:gravity="center"
             android:text="短信拦截器"
             android:textSize="29sp"
             android:textColor="#1228e9"
             />
         </FrameLayout>

     </LinearLayout>

    <!--中部线性布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_margin="15dp"
            android:layout_width="190dp"
            android:layout_height="190dp"
            
            >
            <!--拦截箱背景  android:background="#aaffffff" 设置为透明-->
            <View 
                android:layout_gravity="center"
             android:layout_width="203dp"
            android:layout_height="203dp"

                />
            <!--拦截箱按键-->
         <Button 
               android:layout_gravity="center"
             android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="@drawable/inboxbg"
            android:text="拦截箱"
            android:textSize="29sp"
            android:textColor="#368962"
            android:id="@+id/sns_box_btn"
            />

        </FrameLayout>

        <!--黑白名单-->
           <FrameLayout
            android:layout_margin="20dp"
            android:layout_width="175dp"
            android:layout_height="175dp"
            >
               <!--黑名单背景  android:background="#66ff33"  -->
            <View 
                android:layout_gravity="center"
             android:layout_width="105dp"
            android:layout_height="105dp"

                />
               <!--黑名单按键-->
               <Button
              android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/blackbg"
             android:text="黑名单"
             android:textSize="29sp"
            android:textColor="#368962"
            android:id="@+id/sns_black_btn"
            />
             </FrameLayout>
    </LinearLayout>


    <!--底部线性布局  android:background="#66ff33" -->
       <LinearLayout

          android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="horizontal" >


        <!--设置帧布局-->
      <FrameLayout 
            android:layout_margin="15dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            >

          <!--设置背景android:background="#0b0b0b"-->
            <View
                android:layout_gravity="center"
             android:layout_width="85dp"
            android:layout_height="85dp"

                />

          <!--规则设置按键-->
        <Button 
             android:layout_gravity="center"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="@drawable/wmdbg"
            android:text="设置"
            android:textSize="29sp"
            android:textColor="#368962"
              android:id="@+id/sns_text_btn"
            />
         </FrameLayout>

        <!--注册帧布局-->
        <FrameLayout 
            android:layout_margin="15dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            
            >
            <!--注册背景 android:background="#33ffff"-->
            <View 
                android:layout_gravity="center"
             android:layout_width="175dp"
            android:layout_height="175dp"

                />
            <!--注册图标-->
              <ImageView 
                     android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/setb"
                    />
            <!--注册按键 android:background="#aa120707"-->
            <Button 
             android:layout_gravity="center"
             android:layout_width="100dp"
            android:layout_height="100dp"

                android:text="注册"
                android:textSize="29sp"
            android:id="@+id/sns_set_btn"
            android:textColor="#368962"
            />
              
              </FrameLayout>
    </LinearLayout>
       </LinearLayout>
</ScrollView>


    <!--线性布局-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f10808"
    android:id="@+id/wel_layout"
    android:visibility="gone"
    >
       <TextView 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2"
       android:gravity="center"
       android:text="短信拦截器"
       android:textSize="45sp"
       android:textStyle="bold"
       android:textColor="#2266ff"
       /> 
      <View 
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="#aaf7f4f6"
          /> 
</LinearLayout>

</FrameLayout>
